<% render partial: 'header/flash' %>
<% is_business = true if (user_signed_in?.present? and current_user.is_business?) %>
<header>
  <div class="container HeaderContainer">
    <div class="col-lg-12">
      <div class="navbar-header">
        <ul class="NavMainLinks list-inline ">
          <li class=" visible-lg-inline ">
            <a class="Logo" href="/">
              <span>B24</span>
            </a>
          </li>

          <%= render :partial => '/header/common' %>
        </ul>

        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>

      </div>
      <% if user_signed_in?.present? %>
          <ul class="nav navbar-nav navbar-right">
             <% if is_business %>
                <li>
                  <%= link_to dashboard_path do %>
                      <span class="visible-lg-inline  NavMainLinks__TextLink "><%= t("dashboard") %></span>
                      <i class="visible-xs-inline visible-sm-inline  ti-settings"></i>
                  <% end %>
                </li>
            <% end %>
          </ul>
      <% end %>
      <ul id="navbar" class="nav navbar-nav navbar-right navbar-collapse collapse">
        <% if user_signed_in?.present? %>

            <li>
              <%= link_to profile_path do %>
                  <i class="ti-bell"></i>
              <% end %>
            </li>
            <li class="dropdown">
              <%= link_to edit_user_registration_path(current_user) do %>
                  <i class="ti-user"></i>
              <% end %>
            </li>
            <li>
              <%= link_to destroy_user_session_path, :method => :delete do %>
                  <i class="ti-lock"></i>
              <% end %>
            </li>
        <% else %>
            <%= render :partial => '/header/out' %>
        <% end %>
      </ul>

    </div>

  </div>
</header>