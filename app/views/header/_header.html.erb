<header>
  <%= render partial: 'header/flash' %>
  <div class="container HeaderContainer">
    <div>
      <div class="navbar-header">
        <ul class="NavMainLinks list-inline ">
          <li class=" visible-lg-inline ">
            <a href="/" class="AppLogoContainer AppLogoContainer--Full">
              <span  class="AppLogo"></span>
            </a>
          </li>

          <%= render :partial => '/header/common' %>
        </ul>

        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>

      </div>
      <% if @is_logged_in %>
          <ul class="nav navbar-nav navbar-right">
             <% if @is_business %>
                <li>
                  <%= link_to dashboard_main_path , class: 'businessLink' do %>
                      <span class="visible-lg-inline  NavMainLinks__TextLink "><%= t("dashboard") %></span>
                      <i class="visible-xs-inline visible-sm-inline  ti-settings"></i>
                  <% end %>
                </li>
            <% end %>
          </ul>
      <% end %>
      <ul id="navbar" class="nav navbar-nav navbar-right navbar-collapse collapse">
        <% if @is_logged_in %>
            <li>
              <%= link_to profile_interests_path do %>
                  <i class="ti-bell"></i>
              <% end %>
            </li>
            <li class="dropdown">
              <%= link_to profile_edit_path do %>
                  <i class="ti-user"></i>
              <% end %>
            </li>
            <li>
              <%= link_to destroy_user_session_path, :method => :delete do %>
                  <i class="ti-lock"></i>
              <% end %>
            </li>
        <% else %>
            <%= render :partial => '/header/out' %>
        <% end %>
      </ul>

    </div>

  </div>
</header>