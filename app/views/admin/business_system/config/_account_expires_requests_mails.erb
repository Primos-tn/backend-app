<%= form_for(@system, url: admin_business_configure_path) do |f| %>
    <div class="header">
      <h4 class="title"><%= t('Account expiration Email Reports') %></h4>
    </div>
    <div class="content">
      <div class="row">
        <% (@system.account_expires_requests_mails_alert || []).each do |mail| %>
           <div><%= mail %></div>
        <% end %>

        <div class="col-md-12">
          <div class="form-group">
            <%= f.label "email" %>
            <%= f.text_field :account_expires_requests_mails_alert, class: "form-control border-input", placeholder: "add Email" %>
          </div>
        </div>
        <div class="text-center">
          <button type="submit" class="btn btn-info btn-fill btn-wd"><%= t('Add') %></button>
        </div>
        <div class="clearfix"></div>
      </div>
    </div>
<% end %>