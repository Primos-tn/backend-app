<%= hidden_field_tag :direction, params[:direction] %>
<%= hidden_field_tag :sort, params[:sort] %>
<div class="content table-responsive table-full-width">
  <table class="table table-striped">
    <thead>
    <tr>
      <th><% t('Name') %></th>
      <th><% t('Name French') %></th>
      <th><% t('Name Arabic') %></th>
      <th><% t('Description') %></th>
      <th colspan="3"></th>
    </tr>
    </thead>

    <tbody>
    <% @categories.each do |category| %>
        <tr>
          <td><%= category.name %></td>
          <td><%= category.name_fr %></td>
          <td><%= category.name_ar %></td>
          <td><%= category.desc %></td>
          <td><%= link_to t('Show'), admin_category_path(category) %></td>
          <td><%= link_to t('Edit'), edit_admin_category_path(category) %></td>
          <td><%= link_to t('Destroy'), admin_category_path(category), method: :delete, data: {confirm: 'Are you sure?'} %></td>
        </tr>
    <% end %>
    </tbody>
  </table>
</div>