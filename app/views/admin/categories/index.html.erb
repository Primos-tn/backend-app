<div class="card">
  <div class="header">
    <h4 class="title">
      <%= t('Categories') %>
    </h4>

    <div class="content">

      <%= form_tag admin_categories_path, :method => 'get', :id => "categories_search" do %>
          <p>
            <%= text_field_tag :search, params[:search] %>
            <%= submit_tag t('Search'), :name => nil %>
          </p>
      <% end %>
      <div id='categories'><%= render 'list' %></div>
      <div class="row text-center">
        <%= link_to t('New Category'), new_admin_category_path, class: 'btn  btn-primary' %>
      </div>
    </div>
  </div>
</div>

