<%= form_for(@system, url: admin_system_path) do |f| %>
    <div class="col-lg-12">
      <div class="card">
        <div class="header">
          <h4 class="title"><%= t('Edit Configuration') %></h4>
        </div>
        <div class="content">
          <form>
            <div class="row">
              <div class="col-md-12">
                <div class="form-group">
                  <%= f.label :with_invitation %><br>
                  <%= f.check_box :with_invitation %>
                </div>
              </div>
            </div>
            <%= f.submit :class => 'btn btn-info btn-fill btn-wd' %>
            <div class="clearfix"></div>
          </form>
        </div>
      </div>
    </div>
    </div>
<% end %>