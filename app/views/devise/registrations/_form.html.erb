<a class="btn SocialAuthenticationBtn">
    Facebook
</a>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
<div>
    <%= devise_error_messages! %>
</div>

<div class="clearfix"></div>
<div class="text-center">
    <div class="field">
        <%= f.text_field :username, autofocus: true, placeholder: true %>
    </div>

    <div class="field">
        <%= f.email_field :email, placeholder: true  %>
    </div>

    <div class="field ">
        <!--<% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %>-->
        <%= f.password_field :password, autocomplete: "off" , placeholder: true %>
    </div>

    <div class="field">
        <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: true %>
    </div>
    <div class="links">
        <div class="actions">
          <div>
            <%= f.submit I18n.t("Sign up"), class: 'btn' %>
          </div>
          <%- if style.to_s == 'modal' %>
              <span id="open_login_modal"><%= I18n.t("Sign in") %> </span>
          <% else %>
              <%= render "devise/shared/links" %>
          <% end -%>
        </div>
    </div>
</div>

<% end %>