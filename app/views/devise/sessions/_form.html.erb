<a class="btn SocialAuthenticationBtn">
  Facebook
</a>
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div>
      <%- flash.each do |name, msg| -%>
          <%= content_tag :div, msg, :id => "flash_#{name}" if msg.is_a?(String) %>
      <%- end -%>
    </div>
    <div class="field">
      <%= f.email_field :email, autofocus: true, placeholder: true %>

      <%= f.password_field :password, autocomplete: "off", placeholder: true %>
    </div>

    <% if devise_mapping.rememberable? -%>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
    <% end -%>

    <div class="actions">
      <div>
        <%= f.submit I18n.t("Sign in"), class: 'btn' %>
      </div>
      <%- if style.to_s == 'modal'  %>
        <span id="open_registration_modal"><%= I18n.t("Sign up") %></span>
      <% else %>
          <%= render "devise/shared/links" %>
      <% end -%>
    </div>

<% end %>