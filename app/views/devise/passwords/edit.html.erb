<div class="AccountAuthenticationContainer">
  <h2><%= t('Change your password') %></h2>
  <article>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: {method: :put}) do |f| %>
        <%= devise_error_messages! %>
        <%= f.hidden_field :reset_password_token %>

        <div class="field from-group"><br/>
          <%= f.password_field :password, autofocus: true, autocomplete: "off", placeholder: t("New password") %><br/>
            <small>
              <% if @minimum_password_length %>
                  <em><%= (@minimum_password_length.to_s + ' '+ t('Characters minimum')) %></em>
              <% end %>
            </small>
        </div>

        <div class="field from-group">
          <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: t('Confirm new password') %>
        </div>
        <div class="Links">

          <div class="actions">
            <%= f.submit t('Save'), class: "btn btn-default" %>


            <%= render "devise/shared/links" %>

          </div>

        </div>
    <% end %>
  </article>
</div>
