<div class="header">
  <h4 class="title">
    <%= t('Gallery') %> (<%= @gallery_size.round(2) %> M / 100 M)
  </h4>
</div>

<div class="content">
  <div class="DashboardGallery__DropZone">

    <% @gallery.each do |entry| %>
        <div class="col-lg-4">
          <div class="card card-user">
            <div class="image">
              <img src="<%= get_assets_url(entry.file.thumb.url) %>" class="img-responsive DashboardGallery__Item"/>
            </div>

            <hr/>
            <div class="text-center">
              <div class="row">
                <div class="col-md-6">
                  <h5>
                    <%= entry.name %> &nbsp;
                  </h5>
                </div>
                <div class="col-md-3 text-center">
                  <%= link_to edit_dashboard_brand_gallery_path(entry) do %>
                      <button class="btn btn-sm btn-success btn-icon">
                        <span class="ti-target"></span>
                      </button>
                  <% end %>
                </div>
                <div class="col-md-3  text-center">
                  <%= link_to  dashboard_brand_gallery_path(entry), method: :delete, data: {confirm: I18n.t('Are you sure about that')} do %>
                      <button class="btn btn-sm btn-danger btn-icon">
                        <span class="ti-trash "></span>
                      </button>
                  <% end %>
                </div>
              </div>
            </div>
          </div>
        </div>
    <% end %>
    <div class="clearfix"></div>
    <div class="card">

      <div class="content">
        <%= form_tag dashboard_brand_galleries_path, class: "dropzone" do %>
            <div class="dz-message" data-dz-message><span><%= t('Click or drop to add more files') %></span></div>
        <% end %>
      </div>
    </div>
  </div>
  <div class="clearfix"></div>
</div>
