<div class="card">
  <div class="header">
    <h4 class="title">
      <%= t('Import') %> : <%= @step %>
    </h4>
  </div>
  <div class="content">
    <%= form_tag import_dashboard_products_path do %>

        <%= hidden_field_tag 'uuid', @temp_id %>
        <%= hidden_field_tag 'step', 2 %>

        <div class="content table-responsive table-full-width">
          <%= t('Please map the data') %><br/>
          <table class="table table-striped">
            <thead>
            <% @header.each_with_index do |header_item, index| %>
                <td>
                  <label><%= @header_names[index] %> </label>
                  <%= select_tag 'attr_' + index.to_s, options_for_select(Product.import_names) %>
                </td>
            <% end %>
            </thead>
            <tbody>
            <% @samples.each do |entry| %>
                <tr>
                  <% entry.each do |attribute| %>
                      <td><%= attribute %></td>
                  <% end %>
                </tr>
            <% end %>

            <tr>
              <td class="text-center" colspan="<%= @header.count %>">+<%= @more %></td>
            </tr>
            </tbody>
          </table>
          <div class="row">
            <div class="col-lg-12  text-center">
              <%= submit_tag t("Next"), class: "btn btn-info btn-fill btn-wd" %>
            </div>
          </div>
        </div>
    <% end %>

  </div>
</div>