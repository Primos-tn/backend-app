<%= form_for([:dashboard, @product]) do |f| %>
    <% if @product.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h2>

          <ul>
            <% @product.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
          </ul>
        </div>
    <% end %>
    <div class="row">
      <div class="form-group col-lg-6">
        <%= f.label :name %><br>
        <%= f.text_field :name, class: "form-control border-input" %>
      </div>

      <div class="field input-field col-lg-6">
        <%= f.label :brand_id %><br>
        <%= f.collection_select :brand_id, @brands, :id, :name, include_blank: false, class: "form-control border-input" %>
      </div>
    </div>
    <div class="row">

      <div class="form-group col-lg-6">
        <%= f.label :pictures %><br>
        <%= f.file_field :pictures, multiple: true, class: "form-control border-input" %>
      </div>
    </div>

    <div class="clearfix"></div>
    <div class="text-center">
      <%= f.submit :class => 'btn btn-info btn-fill btn-wd' %>
      <%= link_to t('Back'), dashboard_products_path %>
    </div>

    <div class="clearfix"></div>
<% end %>