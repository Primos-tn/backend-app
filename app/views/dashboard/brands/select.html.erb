<div class="row text-center">
  <h1><%= t('Please select a brand to start') %></h1>
  <%= form_tag ([ :select, :dashboard, :brands]) do  %>
      <label><%= t('Brand') %></label>
      <%= select_tag  :brand, options_from_collection_for_select(@brands, 'id', 'name'), include_blank: true  %>
      <%= button_tag(type: "submit", class: "btn btn-default") do %>
         <%= t('Select brand') %>
      <% end %>
  <% end %>
  <br/>
  <%= link_to t('Create a new brand'), new_dashboard_brand_path, class: 'btn btn-info btn-fill btn-wd' %>
</div>