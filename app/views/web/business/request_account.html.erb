<div class="AppUserForm AppUserForm--NoBorder ">
  <div class="content">
    <h2><%= I18n.t("Apply for business account") %></h2>
    <br/>
    <%= form_for(@business, url: create_request_account_business_index_path) do |f| %>
        <% if @business.errors.any? %>
            <div id="error_explanation">
              <ul>
                <% @business.errors.full_messages.each do |message| %>
                    <li class="text-danger">* <%= message %></li>
                <% end %>
              </ul>
            </div>
        <% end %>
        <div class="row">
          <div class="field">
            <%= f.label :company_name %><br>
            <%= f.text_field :company_name %>
          </div>
          <div class="field">
            <%= f.label :business_phone %><br>
            <%= f.text_field :business_phone %>
          </div>
          <div class="field">
            <%= f.label :business_email %><br>
            <%= f.text_field :business_email %>
          </div>
          <div class="field">
            <%= f.label :country %><br>
            <%= f.select :country, Country.where(code: BusinessSystem.first.supported_countries).collect { |c| [c.name, c.code] } %>

          </div>
          <div class="col-lg-12">
            <div class="field col-lg-6">
              <%= f.label :post_code %><br>
              <%= f.text_field :post_code %>
            </div>
            <div class="field  col-lg-6">

              <%= f.label :city %><br>
              <%= f.text_field :city %>
            </div>
          </div>
          <div class="field">
            <%= f.label :company_address %><br>
            <%= f.text_field :company_address%>
          </div>


        </div>
        <br/>
        <div class="text-center">
          <button type="submit" class="btn AppButton btn-fill btn-wd "><%= t('Apply for business account confirmation') %></button>
        </div>
        <div class="clearfix"></div>
    <% end %>
  </div>
</div>