<div class="AppUserForm AppUserForm--NoBorder ">
  <h1><%= I18n.t("Contact") %></h1>
  <%= form_for(@contact, url: company_contact_path) do |f| %>
      <% if @contact.errors.any? %>
          <div id="error_explanation">
            <ul>
              <% @contact.errors.full_messages.each do |message| %>
                  <li class="text-danger">* <%= message %></li>
              <% end %>
            </ul>
          </div>
      <% end %>

      <div class="field">
        <%= f.label :email %><br>
        <%= f.text_field :email%>
      </div>

      <div class="field" >
        <%= f.label :body %><br>
        <%= f.text_area :body%>
      </div>
      <div class="actions text-center">
        <%= f.submit I18n.t("Submit contact") , :class => 'AppButton' %>
        <%= link_to  I18n.t("Back"), root_path  , :class => 'btn btn-wd' %>
      </div>
  <% end %>
</div>
