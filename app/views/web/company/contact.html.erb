<h1><%= I18n.t("Contact") %></h1>
<hr/>
<div class="col-lg-6 col-lg-offset-3">

  <%= form_for(@contact, url: company_contact_path) do |f| %>
      <% if @contact.errors.any? %>
          <div id="error_explanation">
            <ul>
              <% @contact.errors.full_messages.each do |message| %>
                  <li class="text-danger">* <%= message %></li>
              <% end %>
            </ul>
          </div>
      <% end %>

      <div class="field form-group">
        <%= f.label :email %><br>
        <%= f.text_field :email, class: 'form-control border-input' %>
      </div>

      <div class="field form-group" >
        <%= f.label :body %><br>
        <%= f.text_area :body, class:  'form-control border-input' %>
      </div>
      <div class="actions text-center">
        <%= f.submit I18n.t("Submit contact") , :class => 'AppButton' %>
      </div>
  <% end %>
</div>
